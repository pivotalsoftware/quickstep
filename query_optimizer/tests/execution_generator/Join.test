# Join queries
SELECT a.w, b.x, c.y, d.z
FROM a JOIN b ON a.w = b.w
       JOIN c ON a.x = c.x
       JOIN d ON a.y = d.y;
--
+-----------+--------------------+------------------------+----------------+
|w          |x                   |y                       |z               |
+-----------+--------------------+------------------------+----------------+
|          0|                   0|                      -1|              C0|
|          6|                  61|                     601|              C6|
|         12|                 120|                    1200|             C12|
|         18|                 181|                    1799|             C18|
+-----------+--------------------+------------------------+----------------+
==

SELECT a.w, b.x, c.y
FROM a JOIN b ON (a.w = b.w OR a.x > b.x)
       JOIN c ON (a.x = c.x AND a.y > c.y)
       JOIN d ON (a.y = d.y OR a.z > d.z)
GROUP BY a.w, b.x, c.y
ORDER BY a.w, b.x, c.y;
--
+-----------+--------------------+------------------------+
|w          |x                   |y                       |
+-----------+--------------------+------------------------+
|          0|                   0|                      -1|
|          9|                   0|                     899|
|          9|                  21|                     899|
|          9|                  40|                     899|
|          9|                  61|                     899|
|          9|                  80|                     899|
|         18|                   0|                    1799|
|         18|                  21|                    1799|
|         18|                  40|                    1799|
|         18|                  61|                    1799|
|         18|                  80|                    1799|
|         18|                 101|                    1799|
|         18|                 120|                    1799|
|         18|                 141|                    1799|
|         18|                 160|                    1799|
|         18|                 181|                    1799|
+-----------+--------------------+------------------------+
==

SELECT a1.w, b1.x, c1.y, d1.z
FROM a AS a1 JOIN b AS b1 ON a1.w = b1.w
             JOIN c AS c1 ON a1.x = c1.x
             JOIN d AS d1 ON a1.y = d1.y
WHERE a1.x = b1.x
  AND a1.y = c1.y
  AND a1.z = d1.z;
--
+-----------+--------------------+------------------------+----------------+
|w          |x                   |y                       |z               |
+-----------+--------------------+------------------------+----------------+
|         12|                 120|                    1200|             C12|
+-----------+--------------------+------------------------+----------------+
==

SELECT a1.w, b1.x, c1.y, d1.z
FROM a AS a1 JOIN b AS b1 ON a1.x <> b1.x
             JOIN c AS c1 ON a1.y <> c1.y
             JOIN d AS d1 ON a1.z = d1.z
WHERE a1.w = b1.w
  AND a1.x = c1.x;
--
+-----------+--------------------+------------------------+----------------+
|w          |x                   |y                       |z               |
+-----------+--------------------+------------------------+----------------+
|          6|                  61|                     601|              C6|
|         18|                 181|                    1799|             C18|
+-----------+--------------------+------------------------+----------------+
