# Both assignments need coercion.
UPDATE test
SET float_col = 2,
    double_col = float_col/2
WHERE int_col < -10;

SELECT float_col,
       float_col/2,
       double_col
FROM test
WHERE int_col < -20
   OR int_col > 20;
